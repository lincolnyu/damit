<UserControl x:Class="GraphView.Link"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas>
        <!-- Shaft -->
        <Line X1="{Binding X1}" Y1="{Binding Y1}" X2="{Binding X2}" Y2="{Binding Y2}" Stroke="Black"></Line>
        <!-- Arrow 1 -->
        <Polyline Points="{Binding Arrow1Points}" Visibility="{Binding Arrow1Visibility}"/>
        <!-- Arrow 2 -->
        <Polyline Points="{Binding Arrow2Points}" Visibility="{Binding Arrow2Visibility}"/>
    </Canvas>
</UserControl>
